<!--pages/member/member.wxml-->
<view style=' background-size:100% 100%;background-image:url("{{uploadpath}}resource/{{res.memberbg}}")' class='padding flex-row flex-center' bindtap="bindgeren">
  <view class='padding-20'>
    <image class='icon-50 radius-50 shadow ' src='{{UserInfo.avatarUrl}}'></image>
  </view>
  <view class='flex-1'>
    {{memberinfo.nickName}}
  </view>
  <view class=' line-height-0'>
    <image class='icon' src='{{uploadpath}}resource/{{res.you}}'></image>
  </view>
</view>
<view class="box flex-row">
  <view class=" margin-top-20" bindtap="bindyue">
    <view class="margin-left-70 h5">元</view>
    <view class="margin-left-40 h5 margin-top-20">账户余额</view>
  </view>
  <view class=" margin-top-20 margin-left-30" bindtap="bindpurse">
    <view class="margin-left-70 h5">杯</view>
    <view class="margin-left-40 h5 margin-top-20">餐饮钱包</view>
  </view>
  <view class=" margin-top-20 margin-left-30">
    <view class="margin-left-70 h5">张</view>
    <view class="margin-left-40 h5 margin-top-20">优惠券</view>
  </view>

  <view class=" margin-top-20 margin-left-30" bindtap="bindlipin">
    <view class="margin-left-70 h5">张</view>
    <view class="margin-left-40 h5 margin-top-20">礼品卡</view>
  </view>

</view>
<view class=' padding-40'>
  <view>
    <navigator url='/pages/addressmgr/addressmgr' class='flex-row flex-center  ' hover-class="none">
      <view class='margin-right line-height-0'>
        <image class='icon' src='{{uploadpath}}resource/{{res.address}}'></image>
      </view>
      <view class='flex-1 '>收货地址</view>
      <view class='line-height-0'>
        <image class='icon' src='{{uploadpath}}resource/{{res.you}}'></image>
      </view>
    </navigator>
    <button class=' clear-contact ceshi  ' style='width:750rpx;height:100rpx;' open-type='contact'></button>
    <view class='flex-row flex-center margin-top-60' bindtap=''>
      <view class='margin-right line-height-0'>
        <image class='icon' src='{{uploadpath}}resource/{{res.service}}'></image>
      </view>
      <view class='flex-1 '>客户服务</view>
      <view class='line-height-0'>
        <image class='icon' src='{{uploadpath}}resource/{{res.you}}'></image>
      </view>
    </view>

    <view bindtap='openContent' data-keycode="aboutus" data-title="关于我们" class='flex-row   flex-center margin-top-60 '>
      <view class='margin-right line-height-0'>
        <image class='icon' src='{{uploadpath}}resource/{{res.about}}'></image>
      </view>
      <view class='flex-1  '>关于我们</view>
      <view class='line-height-0'>
        <image class='icon' src='{{uploadpath}}resource/{{res.you}}'></image>
      </view>
    </view>

    <view class='flex-row flex-center  margin-top-60' hover-class="none" bindtap="bindfapiao">
      <view class='margin-right line-height-0'>
        <image class='icon' src='{{uploadpath}}resource/{{res.fapiao}}'></image>
      </view>
      <view class='flex-1 '>发票管理</view>
      <view class='line-height-0'>
        <image class='icon' src='{{uploadpath}}resource/{{res.you}}'></image>
      </view>
    </view>

    <view class='flex-row flex-center  margin-top-60' hover-class="none" bindtap="bindduihuan">
      <view class='margin-right line-height-0'>
        <image class='icon' src='{{uploadpath}}resource/{{res.duihuan}}'></image>
      </view>
      <view class='flex-1 '>兑换优惠</view>
      <view class='line-height-0'>
        <image class='icon' src='{{uploadpath}}resource/{{res.you}}'></image>
      </view>
    </view>

  </view>
</view>


<image class='fixedbottom ' src='{{uploadpath}}resource/{{res.img}}' style='height:280rpx;' mode="aspectFill"></image>